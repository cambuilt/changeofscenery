{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2020",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2021",
    "types": [
      "node",
      "jquery",
      "google.maps"
    ],
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],
    "lib": [
      "es2021",
      "dom"
    ]
  },
  "angularCompilerOptions": { "preserveWhitespaces": false}
}
